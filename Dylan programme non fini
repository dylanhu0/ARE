                c2t3=0

            if c3t1 == 31:

                canvas.coords(BalleB,XC+XB-RAYON,YC+YB-RAYON,XC+XB+RAYON,YC+YB+RAYON)

                c3t1=0

            if c3t2 == 32:

                canvas.coords(BalleN,XC+XN-RAYON,YC+YN-RAYON,XC+XN+RAYON,YC+YN+RAYON)

                c3t2=0

            if c3t3 == 33:

                canvas.coords(BalleN,XC+XN-RAYON,YC+YN-RAYON,XC+XN+RAYON,YC+YN+RAYON)

                c3t3=0    

        #Temps des amis

