#Liste de couleurs
def couleur(Color):

    """

    definit une couleur aleatoirement entre vert = ami, red = agresseur, white = neutre

    """



    x1=random.random()

    #Color=[]



    if x1 <= 1/3:

        Color.append('red')



    elif x1>1/3 and x1 <=2/3:

        Color.append('green')



    elif x1>2/3:

        Color.append('white')



    return Color
L=[]



for i in range(20):

    L=couleur(L)   



print(L)
#couleurs des boules neutres apres eventuelles transformations
z1c1t1= random.sample(L,1)
z2c1t1= random.sample(L,1)
z3c1t1= random.sample(L,1)
print('z1c1t1=',z1c1t1)
print('z2c1t1=',z2c1t1)
print('z3c1t1=',z3c1t1)

#Comparaison de la qte de boules rouges et vertes

l= z1c1t1+z2c1t1+z3c1t1
rouge=0
vert=0

for k in l:
    if k=='red':
        rouge=rouge+1
    if k=='green':
        vert= vert+1


print('rouge=',rouge)
print('vert=',vert)
    

